.modal
  background-color rgba(0,0,0,.4)
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  display flex
  justify-content center
  align-items center

  .modal-body
    background-color #333
    border-radius 10px
    color white
    font-size 12px
    line-height 2
    width 165px
    height 100px
    display flex
    flex-direction column
    align-items center
    justify-content center

    i
      font-size 3em